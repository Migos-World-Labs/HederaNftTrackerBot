modules = ["nodejs-20", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["util-linux", "cairo", "pango", "libjpeg", "giflib", "librsvg"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Bored Ape Forever Mint Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Wild Tigers Forever Mint Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Main Discord Bot"

[[workflows.workflow]]
name = "Bored Ape Forever Mint Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node bored-ape-forever-mint-bot.js"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Wild Tigers Forever Mint Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node forever-mint-bot.js"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Main Discord Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"

[workflows.workflow.metadata]
outputType = "console"

[deployment]
run = ["sh", "-c", "npm install discord.js axios node-cron dotenv && node index.js"]
deploymentTarget = "gce"
ignorePorts = true

[[ports]]
localPort = 3000
externalPort = 80

[agent]
expertMode = true
